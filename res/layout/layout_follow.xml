<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout 
        android:id="@+id/follower_relativeLayoutEntry1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
  		android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">
        <ImageView 
            android:id="@+id/follow_imgViewEntry"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:paddingLeft="4dp"
	        android:paddingRight="4dp"
	        android:src="@drawable/ristel"
	        android:layout_marginTop="4dp"
	        android:contentDescription="userImage"/>
        <Button 
            android:id="@+id/follow_btnEntry"
            android:background="@drawable/follow_button_border"
	        android:layout_width="100dp"
	        android:layout_height="30dp"
	        android:paddingTop="4dp"
	        android:paddingBottom="4dp"
	        android:layout_marginTop="10dp"
	        android:text="Follow"
	        android:textSize="12sp"
	        android:layout_alignParentRight="true"
	        android:textColor="@color/white"/>
        <Button 
            android:id="@+id/follow_btnUnfollowEntry"
            android:background="@drawable/unfollow_button_border"
	        android:layout_width="100dp"
	        android:layout_height="30dp"
	        android:paddingTop="4dp"
	        android:paddingBottom="4dp"
	        android:layout_marginTop="10dp"
	        android:text="Unfollow"
	        android:textSize="12sp"
	        android:layout_alignParentRight="true"
	        android:textColor="@color/black"
	        android:visibility="invisible" />
        <TextView 
            android:id="@+id/follow_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="130dp"
            android:paddingLeft="4dp"
	        android:paddingRight="4dp"
	        android:layout_marginTop="10dp"
	        android:layout_toLeftOf="@id/follow_btnEntry"
	        android:text="Ristel Francis Castro"
	        android:layout_toRightOf="@id/follow_imgViewEntry"/>
    </RelativeLayout>
</FrameLayout>
 