<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    tools:context=".AboutActivity" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
		<RelativeLayout 
	        android:id="@+id/about_relativeLayoutBody"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/activity_horizontal_margin"
   			android:layout_marginRight="@dimen/activity_horizontal_margin"
	        android:layout_marginTop="@dimen/activity_vertical_margin"
	        android:paddingBottom="4dp">
	    	<Button 
			    android:id="@+id/about_setProfilePic"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="Set your profile picture"
			    android:background="@drawable/rectangle"
			    android:gravity="center"
				android:textSize="15sp"/>
	    	<RelativeLayout 
	    	    android:id="@+id/about_userInfo"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_below="@id/about_setProfilePic"
	    	    android:background="@drawable/rectangle"
	    	    android:layout_marginTop="24dp"
	    	    
	    	    
	    	    >
		    	<TextView 
		    	    android:id="@+id/about_userAbout"
		    	    android:layout_height="wrap_content"
		    	    android:layout_width="match_parent"
		    	    android:text="21. UPREDICTABLE. 25% Chinese."
		    	    android:padding="16dp"
		    	    />
		    	<ImageView 
		    	    android:id="@+id/about_locationIcon"
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:src="@drawable/ic_action_place"
		    	    android:contentDescription="locationIcon"
		    	    android:layout_below="@id/about_userAbout"
		    	    android:paddingLeft="4dp"/>
		    	<TextView 
		    	    android:id="@+id/about_userLocation"
		    	    android:layout_height="wrap_content"
		    	    android:layout_width="wrap_content"
		    	    android:text="Cebu, Philippines"
		    	    android:layout_toRightOf="@id/about_locationIcon"
		    	    android:layout_below="@id/about_userAbout"
		    	    android:paddingTop="16dp"/>
		    	
	    	
		    	<TextView 
				        android:id="@+id/about_line1"
				        android:layout_width="match_parent"
				        android:layout_height="1dp"
				        android:layout_marginTop="16dp"
				        android:layout_below="@+id/about_locationIcon"
				        android:background="@color/light_gray"/>
		    	<Button 
			    	    android:id="@+id/about_followers"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:text="Followers"
						android:textSize="15sp"
						android:background="@color/transparent"
						android:layout_alignParentLeft="true"
						android:layout_below="@id/about_line1"
						android:padding="16dp"
						/>
		    	<TextView 
		    	    android:id="@+id/about_numberOfFollowers"
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:text="22"
		    	    android:padding="16dp"
		    	    android:layout_toRightOf="@id/about_followers"
		    	    android:layout_below="@id/about_line1"/>
		    	<Button 
			    	    android:id="@+id/about_following"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:text="Following"
						android:textSize="15sp"
						android:background="@color/transparent"
						android:layout_toRightOf="@id/about_numberOfFollowers"
						android:layout_below="@id/about_line1"
						android:padding="16dp"
						/>
		    	<TextView 
		    	    android:id="@+id/about_numberOfFollowing"
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:layout_alignParentRight="true"
		    	    android:text="20"
		    	    android:padding="16dp"
		    	    android:layout_below="@id/about_line1"/>
		    	<TextView 
				        android:id="@+id/about_line2"
				        android:layout_width="match_parent"
				        android:layout_height="1dp"
				        android:layout_below="@+id/about_followers"
				        android:background="@color/light_gray"/>
		    	<TextView 
		    	    android:id="@+id/about_addWebsite"
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:text="Add your website..."
		    	    android:padding="16dp"
		    	    android:layout_below="@id/about_line2"/>
		    	<ImageButton 
		    	    android:id="@+id/about_next"
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:src="@drawable/ic_action_next_item"
		    	    android:contentDescription="next"
		    	    android:padding="4dp"
		    	    android:layout_alignParentRight="true"
		    	    android:layout_below="@id/about_line2"
		    	    android:background="@color/transparent"/>
	    	</RelativeLayout>
	    </RelativeLayout>
	</RelativeLayout>
</ScrollView>